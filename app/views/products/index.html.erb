<h1 class = 'text-center'>Product</h1>
<div class ="text-center">
  <%= link_to "New Product", new_product_path, class: "btn btn-primary m-2" %>
  <table id = "product-list" class = 'table mx-auto table-striped table-bordered table-condensed table-responsive'>
    <thead>
      <tr >
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Type</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.type %></td>
          <td>
            <%= link_to "Show", product_path(product), class: "btn btn-primary" %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary" %>
            <%= link_to "Destroy", product_path(product.id), class: "btn btn-primary" , data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
